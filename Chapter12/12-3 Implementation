import java.util.Scanner;
import java.util.concurrent.ThreadLocalRandom;

public class Main {
    private static final int SIZE = 100;
    private static final int BOUND = 1000;

    public static void main(String[] args) {
        int[] data = new int[SIZE];
        for (int i = 0; i < data.length; i++) {
            data[i] = ThreadLocalRandom.current().nextInt(BOUND);
        }

        @SuppressWarnings("resource")
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter an index (0-" + (SIZE - 1) + "): ");
        if (!sc.hasNextInt()) {
            System.out.println("Invalid input");
            return;
        }
        int idx = sc.nextInt();

        try {
            // This is the point where ArrayIndexOutOfBoundsException would be triggered
            System.out.println("Value: " + data[idx]);
        } catch (ArrayIndexOutOfBoundsException e) {
            System.out.println("Out of Bounds");
        }
        // Note: not closing Scanner to avoid closing System.in
    }
}
